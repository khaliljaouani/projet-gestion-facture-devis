{
  "name": "gestion-app",
  "version": "1.3.3",
  "private": true,
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/khaliljaouani/projet-gestion-facture-devis.git"
  },
  "scripts": {
    "server": "node backend/server.js",
    "client": "cd frontend && npm run dev",
    "electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently -k -n server,client,electron -c green,cyan,magenta \"npm run server\" \"npm run client\" \"npm run electron\"",
    "start": "electron electron/main.js",

    "build:ui": "cd frontend && npm run build",

   
    "dist:win": "npm run build:ui && set NODE_ENV=production&& npx --yes electron-builder@latest --win --x64",

   
    "dist:win:pub": "npm run build:ui && set NODE_ENV=production&& npx --yes electron-builder@latest --win --x64 --publish always"
  },
  "build": {
    "appId": "com.gestion.app",
    "productName": "Pneus Rouen",
    "electronVersion": "30.0.0",
    "directories": { "output": "dist" },
    "files": [
      "backend/**/*",
      "frontend/dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": ["node_modules/sqlite3/**"],
    "publish": [
      {
        "provider": "github",
        "owner": "khaliljaouani",
        "repo": "projet-gestion-facture-devis",
        "releaseType": "release"
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": [{ "target": "nsis", "arch": ["x64"] }]
    }
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "4.19.2",
    "sqlite3": "^5.1.7"
  }
}
