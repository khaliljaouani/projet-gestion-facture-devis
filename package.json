{
  "name": "gestion-app",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "server": "node backend/server.js",
    "client": "cd frontend && npm run dev",
    "electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run electron\"",
    "start": "electron electron/main.js",
    "build:ui": "cd frontend && npm run build",
    "pack": "npm run build:ui && set NODE_ENV=production&& npx --yes @electron/packager@latest . GestionApp --platform=win32 --arch=x64 --overwrite --out=release --no-prune --asar.unpackDir=node_modules/sqlite3/**",
    "dist:win": "npm run build:ui && set NODE_ENV=production&& electron-builder --win --x64",
    "dist:win:pub": "npm run build:ui && set NODE_ENV=production&& electron-builder --win --x64 --publish always"
  },
  "build": {
    "appId": "com.gestion.app",
    "productName": "GestionApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "backend/**/*",
      "frontend/dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "khaliljaouani",
        "repo": "projet-gestion-facture-devis",
        "releaseType": "release"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "4.19.2",
    "sqlite3": "^5.1.7"
  }
}
